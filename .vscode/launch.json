{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha_TypeScript_Debugger",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-r",
            "ts-node/register",
            "npm",
            "test",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test/**/*.spec.ts",
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "openDebug": "openOnDebugBreak",
        "sourceMaps": true,
    },
    ]
  }